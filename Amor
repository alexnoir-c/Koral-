  <title>Carta con corazón</title>
  <style>
    :root{
      --bg:#ffd1e0;       /* rosa de fondo */
      --paper:#ffffff;    /* color de la carta */
      --ink:#333333;      /* texto */
      --accent:#ff3354;   /* corazón */
      --shadow:0 18px 35px rgba(0,0,0,.18);
    }*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family: ui-serif, Georgia, "Times New Roman", Times, serif;
  background:var(--bg);
  color:var(--ink);
  overflow:hidden;
}

.stage{
  position:relative;
  width:100vw; height:100vh;
}

/* Pista */
.hint{
  position:absolute; left:50%; top:38%; transform:translate(-50%,-50%);
  margin:0; font-size:1.1rem; letter-spacing:.3px; opacity:.65;
  user-select:none;
}

/* Botón corazón */
.heart{
  position:absolute; left:50%; top:50%;
  transform:translate(-50%,-50%);
  background:none; border:0; padding:0; cursor:pointer;
  z-index:3; filter:drop-shadow(0 6px 8px rgba(0,0,0,.25));
  transition: transform .6s ease, filter .3s ease;
}
.heart svg{display:block; width:58px; height:auto}

/* latido */
.heart svg{animation:beat 1.8s ease-in-out infinite}
@keyframes beat{
  0%, 100%{transform:scale(1)}
  15%{transform:scale(1.08)}
  30%{transform:scale(0.98)}
  45%{transform:scale(1.08)}
  60%{transform:scale(1)}
}

/* Carta */
.letter{
  position:absolute; left:50%; top:50%; transform:translate(-50%,-50%);
  width:min(90vw, 700px);
  z-index:2; perspective:1200px; /* para el efecto 3D opcional */
}
.paper{
  background:var(--paper);
  border-radius:14px;
  box-shadow:var(--shadow);
  padding:34px 44px 52px;
  line-height:1.6; font-size:1.05rem;

  /* Estado cerrado: plegada/oculta */
  clip-path:inset(0 0 100% 0 round 14px); /* oculta desde abajo hacia arriba */
  transform-origin:top center;
  transform:rotateX(16deg) scale(.98);
  opacity:.0;
  transition:
    clip-path 1.25s cubic-bezier(.2,.7,.1,1),
    opacity .4s ease .2s,
    transform 1.2s cubic-bezier(.2,.7,.1,1);
}

.paper h1{margin:.2rem 0 1rem; font-size:2.2rem; letter-spacing:.6px}
.paper p{margin:.6rem 0}
.signature{margin-top:1.4rem; font-style:italic; opacity:.8}

/* Estados cuando se abre */
.stage.open .paper{
  clip-path:inset(0 0 0 0 round 14px);
  opacity:1;
  transform:rotateX(0) scale(1);
}
.stage.open .heart{
  /* baja el corazón para quedar pegado a la carta */
  transform:translate(-50%, calc(-50% + 250px));
  filter:drop-shadow(0 2px 5px rgba(0,0,0,.25));
}
.stage.open .hint{opacity:0; transition:opacity .3s ease}

/* accesibilidad */
.heart:focus-visible{outline:3px solid #0004; outline-offset:6px; border-radius:999px}

/* Móvil pequeño: ajustamos desplazamiento del corazón */
@media (max-height:650px){
  .stage.open .heart{transform:translate(-50%, calc(-50% + 200px))}
}

